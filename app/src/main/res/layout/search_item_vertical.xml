<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:padding="0dp"
    android:background="@color/black"
    android:layout_height="250dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:padding="2dp"
        >

        <ImageView
            android:id="@+id/imgVerticallLst"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/car">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="101K Views"
            android:padding="6dp"
            app:layout_constraintTop_toTopOf="@id/imgVerticallLst"
            app:layout_constraintEnd_toEndOf="@id/imgVerticallLst"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blackLight"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="dfdfdfd jbdad uuuadfva"
            android:padding="6dp"
            app:layout_constraintBottom_toBottomOf="@id/imgVerticallLst"
            app:layout_constraintStart_toStartOf="@id/imgVerticallLst"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>