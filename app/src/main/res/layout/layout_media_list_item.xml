<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/black"
    >

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/img_user"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginLeft="8dp"
      android:src="@drawable/roundmer"
      app:civ_border_color="#FF000000"
      app:civ_border_width="2dp"
      app:layout_constraintLeft_toLeftOf="@id/guideline2"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/txt_username"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Ayushi Gaur"
      android:textColor="@color/white"
      android:textSize="15dp"
      android:fontFamily="@font/popinslight"
      android:layout_marginLeft="8dp"
      app:layout_constraintLeft_toRightOf="@id/img_user"
      app:layout_constraintRight_toLeftOf="@id/img_threedots"
      app:layout_constraintTop_toTopOf="@id/img_user"
      android:layout_marginRight="10dp"
      app:layout_constraintBottom_toBottomOf="@id/img_user"/>

  <ImageView
      android:id="@+id/img_threedots"
      android:layout_width="25dp"
      android:layout_height="25dp"
      android:src="@drawable/moreicon"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@id/txt_username"
      app:layout_constraintBottom_toBottomOf="@id/txt_username"/>

  <ImageView
      android:id="@+id/videoview"
      android:layout_width="wrap_content"
      android:layout_height="200dp"
      android:src="@drawable/headerimage"
      android:scaleType="centerCrop"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="5dp"
      app:layout_constraintTop_toBottomOf="@id/img_user">

  </ImageView>

  <ImageView
      android:id="@+id/img_like"
      android:layout_width="35dp"
      android:layout_height="35dp"
      android:src="@drawable/likeicon"
      app:layout_constraintTop_toBottomOf="@+id/videoview"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="10dp"/>

  <ImageView
      android:id="@+id/img_messge"
      android:layout_width="35dp"
      android:layout_height="35dp"
      android:src="@drawable/commenticon"
      app:layout_constraintTop_toBottomOf="@+id/videoview"
      app:layout_constraintLeft_toRightOf="@id/img_like"
      android:layout_marginTop="10dp"
      />

  <ImageView
      android:id="@+id/img_share"
      android:layout_width="35dp"
      android:layout_height="35dp"
      android:src="@drawable/shareicon"
      app:layout_constraintTop_toBottomOf="@+id/videoview"
      app:layout_constraintLeft_toRightOf="@id/img_messge"
      android:layout_marginTop="10dp"
      />

  <ImageView
      android:id="@+id/img_save"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:src="@drawable/saveiocn"
      app:layout_constraintTop_toBottomOf="@+id/videoview"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>